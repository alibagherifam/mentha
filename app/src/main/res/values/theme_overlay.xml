<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeOverlay.MyApp.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>

        <!-- Window properties -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyApp.BottomSheet.Modal</item>

        <!-- System bar colors -->
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="ThemeOverlay.MyApp.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:layoutDirection">rtl</item>
    </style>
</resources>