<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Day-Mode application theme -->
    <style name="Theme.MyApp" parent="Theme.MyApp.Base">
        <!-- Material color attributes -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/olive</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/lemon</item>
        <item name="colorSecondaryVariant">@color/light_green</item>
        <item name="colorOnSecondary">@color/dark_green</item>

        <item name="colorSurface">@color/silver</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorError">@color/red_400</item>
        <item name="colorOnError">@color/white</item>

        <!-- Window bar color attributes -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>
</resources>